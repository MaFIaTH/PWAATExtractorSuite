<rxui:ReactiveUserControl  xmlns="https://github.com/avaloniaui"
                          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                          xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                          xmlns:rxui="http://reactiveui.net"
                          xmlns:vm="clr-namespace:PWAATExtractorSuite.ViewModels.Dialogs"
                          xmlns:dha="clr-namespace:DialogHostAvalonia;assembly=DialogHost.Avalonia"
                          mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="250"
                          x:DataType="vm:WizardDialogViewModel"
                          x:TypeArguments="vm:WizardDialogViewModel"
                          x:Class="PWAATExtractorSuite.Views.Dialogs.WizardDialogView">
    <Design.DataContext>
        <vm:WizardDialogViewModel />
    </Design.DataContext>
    
    <DockPanel Margin="10">
        <TextBlock DockPanel.Dock="Top" 
                   Text="{Binding ExtractorType.Value, StringFormat='{}{0} Workspace Wizard'}"
                   FontSize="20"
                   FontWeight="SemiBold"></TextBlock>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Right" Spacing="10">
            <StackPanel.Styles>
                <Style Selector="Button">
                    <Setter Property="Width" Value="80"></Setter>
                    <Setter Property="Height" Value="30"></Setter>
                </Style>
                <Style Selector="TextBlock">
                    <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                    <Setter Property="VerticalAlignment" Value="Center"></Setter>
                </Style>
            </StackPanel.Styles>
            <Button
                    Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=dha:DialogHost}, Path=CloseDialogCommand}">
                <TextBlock Text="Cancel"/>
            </Button>
            <Button
                    Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=dha:DialogHost}, Path=CloseDialogCommand}" 
                    CommandParameter="{Binding RootWorkspacePath.Value}">
                <TextBlock Text="OK"/>
            </Button>
        </StackPanel>
        <StackPanel Orientation="Vertical" Spacing="10" Margin="0,10,0,10">
            <TextBlock 
                TextWrapping="Wrap"
                Text="Choose the workspace root location below."></TextBlock>
            <StackPanel Orientation="Horizontal">
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <TextBox 
                        Text="{Binding RootWorkspacePath.Value, Mode=TwoWay}" 
                        Width="200"/>
                    <Button
                        Command="{Binding BrowseRootWorkspacePathCommand}"
                        ToolTip.Tip="Browse for Workspace Root Folder">
                        <TextBlock Text="Browse"/>
                    </Button>
                </StackPanel>
            </StackPanel>
            <TextBlock 
                TextWrapping="Wrap">
                <TextBlock.Inlines>
                    <Run Text="The remaining workspace folders will be created automatically"></Run>
                    <Run FontWeight="SemiBold" Text="inside"></Run>
                    <Run Text="the selected root folder."></Run>
                </TextBlock.Inlines>
            </TextBlock>
        </StackPanel>
    </DockPanel>
</rxui:ReactiveUserControl>
